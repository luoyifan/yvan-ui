{
  "name": "yvan-ui",
  "version": "0.1.0",
  "description": "WinForm style web framework.",
  "license": "MIT",
  "main": "dist/yvan-ui.js",
  "module": "dist/yvan-ui-es.js",
  "scripts": {
    "build": "rollup -c build/rollup.config.js",
    "clean": "rimraf dist/",
    "dev": "rollup -w -c build/rollup.config.js",
    "docs": "typedoc --options typedoc.json && cp README.md docs/ && cp .nojekyll docs/",
    "link:add": "yarn link && yarn link %npm_package_name%",
    "link:remove": "yarn unlink %npm_package_name% && yarn unlink",
    "test": "jest --all"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/rollup": "^0.54.0",
    "jest": "^24.5.0",
    "jest-extended": "^0.11.1",
    "prettier": "^1.18.2",
    "prettier-config-standard": "^1.0.1",
    "rollup": "^1.27.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.25.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.5.0",
    "tslib": "^1.11.1",
    "typedoc": "^0.16.0",
    "typescript": "^3.8.3"
  }
}